<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/color_fondo">

    <ImageView
        android:id="@+id/logoPuntuaciones"
        android:layout_width="254dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tvTituloMisVotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/titulo_mis_puntuaciones"
        android:textColor="@color/color_principal_oscuro"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvSinPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/msg_sin_puntuaciones"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lvPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_principal_oscuro"
            android:dividerHeight="1dp" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverPuntuacion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/color_principal"
        android:text="@string/btn_volver"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="12dp" />

</LinearLayout>