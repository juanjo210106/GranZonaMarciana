<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logoPuntuaciones"
        android:layout_width="254dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvTituloMisVotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Puntuaciones Enviadas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#01488e"
        app:layout_constraintTop_toBottomOf="@id/logoPuntuaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvSinPuntuaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Todavía no has emitido ninguna puntuación"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMisVotos"
        app:layout_constraintBottom_toTopOf="@id/btnVolverPuntuacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ListView
        android:id="@+id/lvPuntuaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:divider="#01488e"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toTopOf="@id/btnVolverPuntuacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMisVotos" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverPuntuacion"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Volver"
        android:backgroundTint="@android:color/black"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>