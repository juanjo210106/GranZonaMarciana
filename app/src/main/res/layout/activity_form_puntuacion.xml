<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emitir Puntuación"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#01488e"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilIdConcursante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="ID del Concursante"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@id/tvTituloVoto">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etIdConcursanteVoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilValorPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Puntuación (Ej: 1-10)"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@id/tilIdConcursante">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etValorVoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuardarVoto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Guardar Puntuación"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tilValorPuntos" />

</androidx.constraintlayout.widget.ConstraintLayout>