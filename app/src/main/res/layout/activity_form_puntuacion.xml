<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/logoSolicitud"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Gran Zona Marciana"
        android:src="@drawable/logo"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/tvTituloVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emitir Puntuación"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/color_principal_oscuro"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilIdConcursante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del Concursante"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etIdConcursanteVoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilValorPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Puntuación (Ej: 1-10)"
        android:layout_marginBottom="24dp"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etValorVoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuardarVoto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Guardar Puntuación"
        android:textColor="@color/black"
        android:backgroundTint="@color/color_principal"
        app:cornerRadius="12dp" />

</LinearLayout>
