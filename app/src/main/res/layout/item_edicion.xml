<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgEdicion"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:src="@android:drawable/ic_menu_agenda"
        android:contentDescription="Icono EdiciÃ³n"
        app:tint="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvFechas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTituloEdicion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="La Carcel De Los Gemelos"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgEdicion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvFechas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inicio: 01/01/2026 - Fin: 30/03/2026"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloEdicion"
        app:layout_constraintStart_toEndOf="@id/imgEdicion"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max. Participantes: 20"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/imgEdicion"
        app:layout_constraintTop_toBottomOf="@id/tvFechas"/>

</androidx.constraintlayout.widget.ConstraintLayout>