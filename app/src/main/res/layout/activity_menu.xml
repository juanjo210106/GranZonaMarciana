<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Panel de Control"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenido">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Noticias"
                android:padding="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_today"
                app:iconTint="@color/black"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVotarGalas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Votar en Galas"
                android:padding="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/btn_star_big_on"
                app:iconTint="@color/black"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:padding="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_myplaces"
                app:iconTint="@color/black"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D1D1D1"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMINISTRACIÓN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGestionarEdiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestionar Ediciones"
                android:padding="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconTint="@color/black"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de Usuarios"
                android:padding="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_allfriends"
                app:iconTint="@color/black"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Administrador"
                android:padding="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconTint="@color/black"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cerrar Sesión"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="#D32F2F"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_lock_power_off"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>