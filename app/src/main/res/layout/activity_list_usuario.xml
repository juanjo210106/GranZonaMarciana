<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/color_fondo">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="254dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvSinUsuarios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/msg_sin_usuarios"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lvUsuarios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_principal_oscuro"
            android:dividerHeight="1dp"
            android:paddingBottom="8dp" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_volver_menu"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/color_principal"
        android:textAllCaps="false"
        app:cornerRadius="12dp" />

</LinearLayout>