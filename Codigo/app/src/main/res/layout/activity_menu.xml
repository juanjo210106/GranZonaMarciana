<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/txt_panel_control"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ACCESO PÚBLICO -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_ver_noticias"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_today"
                app:iconTint="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerEdiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_ver_ediciones"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconTint="@color/black" />

            <!-- ROLES ESPECÍFICOS -->

            <!-- NUEVO: Inscribirse en Edición - SOLO CONCURSANTES -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInscribirse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_inscribirse_edicion"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <!-- MODIFICADO: Votar - SOLO ESPECTADORES -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVotarGalas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_votar_galas"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/btn_star_big_on"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMisPuntuaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_mis_puntuaciones_corto"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="18dp"
                android:text="@string/titulo_editar_perfil"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_myplaces"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <!-- SECCIÓN ADMINISTRADOR -->
            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="#D1D1D1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvAdminLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="12dp"
                android:text="@string/txt_administracion_label"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGestionarEdiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_gestionar_ediciones"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGestionarGalas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_gestionar_galas"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_today"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGestionarSolicitudes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_gestionar_solicitudes"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_help"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_usuarios_lista"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconTint="@color/black"
                android:visibility="gone" />

            <!-- NUEVO: Crear Administrador - SOLO ADMIN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="18dp"
                android:text="@string/btn_crear_admin"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconTint="@color/black"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Cerrar Sesión -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_cerrar_sesion"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="#D32F2F"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_lock_power_off"
        app:iconTint="@android:color/white" />

</LinearLayout>