<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvEstadoSolicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/ejemplo_estado_solicitud"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvFechaSolicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/ejemplo_fecha_solicitud"
        android:textSize="14sp"
        android:textColor="@color/color_principal_oscuro"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvDescripcionSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/ejemplo_descripcion_solicitud"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>